@model GalleryIndexViewModel

<div class="bottomMarginDefault">
</div>
<div>
    <div >
        <a class="nav-link text-dark" asp-area="" asp-controller="FileStorage" asp-action="Create">Add an Image</a>
    </div>
</div>
<div class="container">
      <div class="row">
    @foreach (var item in Model.Images)
    {
       <div class="pull-left col-md-4">            
            <div>
              @*  <img class="thumbnailImage" src="@("https://localhost:7075/images/" + item.FileName)" />*@
            </div>
            <div>
                <div class="h6 topMarginSmall">@item.Title</div>
                <div class="bottomMarginDefault">
                        <a asp-action="EditImage" asp-controller="FileStorage" asp-route-id="@item.Id">Edit title</a> |
                        <a asp-action="DeleteImage" asp-controller="FileStorage" asp-route-id="@item.Id">Delete image</a>
                </div>
            </div>
        </div>
    }
    </div>
</div> 